  <style>
    .contact {
      position: relative;
      overflow: hidden;
    }
    
    .contact::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 800px;
      height: 400px;
      background: radial-gradient(ellipse, rgba(0, 212, 255, 0.1) 0%, transparent 70%);
      pointer-events: none;
    }
    
    .contact-wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }
    
    .contact-content .section-label {
      display: block;
      text-align: left;
    }
    
    .contact-content .section-title {
      text-align: left;
      margin-bottom: 1rem;
    }
    
    .contact-description {
      font-size: 1.125rem;
      color: var(--color-text-muted);
      margin-bottom: 2.5rem;
      max-width: 480px;
    }
    
    .contact-links {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    
    .contact-link {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.25rem 1.5rem;
      background: var(--color-bg-card);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      backdrop-filter: blur(10px);
      transition: all var(--transition-smooth);
    }
    
    .contact-link:hover {
      border-color: var(--color-border-hover);
      transform: translateX(8px);
      box-shadow: var(--glow-primary);
    }
    
    .contact-link-icon {
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--color-bg-tertiary);
      border-radius: 10px;
      color: var(--color-text-primary);
      flex-shrink: 0;
      transition: all var(--transition-fast);
    }
    
    .contact-link:hover .contact-link-icon {
      background: var(--color-accent-primary);
      color: var(--color-bg-primary);
    }
    
    .contact-link-icon.linkedin {
      color: #0a66c2;
    }
    
    .contact-link:hover .contact-link-icon.linkedin {
      background: #0a66c2;
      color: white;
    }
    
    .contact-link-icon.email {
      color: var(--color-accent-tertiary);
    }
    
    .contact-link:hover .contact-link-icon.email {
      background: var(--color-accent-tertiary);
      color: var(--color-bg-primary);
    }
    
    .contact-link-info {
      flex-grow: 1;
      min-width: 0;
    }
    
    .contact-link-label {
      display: block;
      font-size: 0.8125rem;
      color: var(--color-text-muted);
      margin-bottom: 0.125rem;
    }
    
    .contact-link-value {
      font-weight: 500;
      color: var(--color-text-primary);
      word-break: break-all;
    }
    
    .contact-link-arrow {
      color: var(--color-text-muted);
      flex-shrink: 0;
      transition: all var(--transition-fast);
    }
    
    .contact-link:hover .contact-link-arrow {
      color: var(--color-accent-primary);
      transform: translateX(4px);
    }
    
    /* Contact Visual Card */
    .contact-visual {
      display: flex;
      justify-content: center;
    }
    
    .contact-card {
      position: relative;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 20px;
      padding: 2rem;
      width: 100%;
      max-width: 380px;
      overflow: hidden;
    }
    
    .contact-card-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid var(--color-border);
    }
    
    .contact-avatar {
      width: 64px;
      height: 64px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--color-accent-gradient);
      border-radius: 14px;
      font-family: var(--font-heading);
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--color-bg-primary);
    }
    
    .contact-card-info h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-text-primary);
      margin-bottom: 0.25rem;
    }
    
    .contact-card-info p {
      font-size: 0.875rem;
      color: var(--color-text-muted);
    }
    
    .contact-card-body {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    
    .contact-detail {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.9375rem;
      color: var(--color-text-secondary);
    }
    
    .contact-detail svg {
      color: var(--color-accent-primary);
      flex-shrink: 0;
    }
    
    .contact-detail.status {
      margin-top: 0.5rem;
      color: var(--color-accent-tertiary);
    }
    
    .status-indicator {
      width: 10px;
      height: 10px;
      background: var(--color-accent-tertiary);
      border-radius: 50%;
      box-shadow: 0 0 10px var(--color-accent-tertiary);
      animation: pulse-glow 2s ease-in-out infinite;
    }
    
    .contact-card-decoration {
      position: absolute;
      top: -50px;
      right: -50px;
      width: 200px;
      height: 200px;
      background: var(--color-accent-gradient);
      border-radius: 50%;
      opacity: 0.05;
      filter: blur(40px);
    }
    
    @media (max-width: 900px) {
      .contact-wrapper {
        grid-template-columns: 1fr;
        gap: 3rem;
      }
      
      .contact-visual {
        order: -1;
      }
      
      .contact-content .section-label,
      .contact-content .section-title {
        text-align: center;
      }
      
      .contact-description {
        text-align: center;
        margin-left: auto;
        margin-right: auto;
      }
    }
  </style>