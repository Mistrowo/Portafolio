---
const experiences = [
  {
    period: '2023 - Presente',
    role: 'Desarrollador Full Stack',
    company: 'OHFFICE',
    location: 'Santiago, Chile',
    type: 'Profesional',
    description: 'Desarrollo y mantenimiento de sistemas empresariales para gestión de producción y ventas.',
    responsibilities: [
      'Automatización de procesos empresariales',
      'Desarrollo del Customizador de productos',
      'Generación de reportes dinámicos',
      'Migración de plataforma y versiones',
      'Testing e integración de APIs',
      'Desarrollo sitio web corporativo'
    ],
    skills: ['Laravel', 'NestJS', 'React', 'Vue.js', 'PostgreSQL', 'Docker'],
    links: [
    ]
  },
  {
    period: '2022 - 2023',
    role: 'Desarrollador Full Stack',
    company: 'GETBACK',
    location: 'Santiago, Chile',
    type: 'Profesional',
    description: 'Desarrollo de sistema de gestión para logística inversa y reciclaje.',
    responsibilities: [
      'Sistema de gestión logística inversa',
      'Desarrollo de APIs RESTful',
      'Implementación de testing',
      'Despliegue y mantenimiento'
    ],
    skills: ['NestJS', 'React', 'PostgreSQL', 'Docker'],
    links: []
  },
  {
    period: '2022 - 2023',
    role: 'Ayudante de Probabilidades',
    company: 'Universidad Diego Portales',
    location: 'Santiago, Chile',
    type: 'Académico',
    description: 'Apoyo académico en el curso de Probabilidades y Estadística.',
    responsibilities: [
      'Preparación de ayudantías semanales',
      'Resolución de ejercicios prácticos',
      'Corrección de pruebas y tareas',
      'Atención de consultas estudiantiles'
    ],
    skills: ['Comunicación', 'Liderazgo', 'LaTeX', 'Estadística'],
    links: []
  },
  {
    period: '2023 - Presente',
    role: 'Desarrollador Freelance',
    company: 'Independiente',
    location: 'Remoto',
    type: 'Freelance',
    description: 'Desarrollo de proyectos web personalizados para diversos clientes.',
    responsibilities: [
      'Landing pages profesionales',
      'Sistemas de gestión de pedidos',
      'Integración con Servicios de Pago',
      'Diseño UI/UX responsive'
    ],
    skills: ['Astro', 'React', 'Next.js', 'Tailwind CSS', 'Vercel'],
    links: [
    ]
  }
];

const typeColors: Record<string, string> = {
  'Profesional': 'type-professional',
  'Académico': 'type-academic',
  'Freelance': 'type-freelance'
};
---

<section id="experiencia" class="experience section">
  <div class="container">
    <div class="section-header">
      <span class="section-label" data-animate="fade-up">Trayectoria</span>
      <h2 class="section-title" data-animate="fade-up" data-delay="100">
        Mi <span class="gradient-text">Experiencia</span>
      </h2>
      <p class="section-description" data-animate="fade-up" data-delay="200">
        Un recorrido por mi desarrollo profesional y académico
      </p>
    </div>
    
    <div class="timeline">
      {experiences.map((exp, index) => (
        <div 
          class="timeline-item"
          data-animate={index % 2 === 0 ? "fade-right" : "fade-left"}
          data-delay={String((index + 1) * 150)}
        >
          <div class="timeline-marker">
            <div class="marker-dot"></div>
          </div>
          
          <div class="timeline-card card">
            <div class="card-header">
              <span class={`type-badge ${typeColors[exp.type]}`}>{exp.type}</span>
              <span class="period">{exp.period}</span>
            </div>
            
            <h3 class="role">{exp.role}</h3>
            <div class="company-info">
              <span class="company">{exp.company}</span>
              <span class="location">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                {exp.location}
              </span>
            </div>
            
            <p class="description">{exp.description}</p>
            
            <ul class="responsibilities">
              {exp.responsibilities.map((item) => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20,6 9,17 4,12"/>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            
            <div class="card-footer">
              <div class="skills-tags">
                {exp.skills.map((skill) => (
                  <span class="skill-tag">{skill}</span>
                ))}
              </div>
              
             
            </div>
          </div>
        </div>
      ))}
      
      <div class="timeline-line"></div>
    </div>
  </div>
</section>

<style>
  .experience {
    background: var(--color-bg-secondary);
    position: relative;
  }
  
  .experience::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }
  
  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }
  
  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--color-accent-primary), var(--color-accent-secondary), var(--color-accent-tertiary));
    transform: translateX(-50%);
    border-radius: 2px;
  }
  
  .timeline-item {
    position: relative;
    width: 50%;
    padding: 0 2.5rem 3rem;
  }
  
  .timeline-item:nth-child(odd) {
    margin-left: 50%;
    padding-left: 2.5rem;
    padding-right: 0;
  }
  
  .timeline-item:nth-child(even) {
    margin-right: 50%;
    padding-right: 2.5rem;
    padding-left: 0;
    text-align: right;
  }
  
  .timeline-item:nth-child(even) .timeline-card {
    text-align: left;
  }
  
  .timeline-item:nth-child(even) .card-header {
    flex-direction: row-reverse;
  }
  
  .timeline-item:nth-child(even) .skills-tags {
    justify-content: flex-start;
  }
  
  .timeline-marker {
    position: absolute;
    top: 0;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  
  .timeline-item:nth-child(odd) .timeline-marker {
    left: -10px;
  }
  
  .timeline-item:nth-child(even) .timeline-marker {
    right: -10px;
  }
  
  .marker-dot {
    width: 16px;
    height: 16px;
    background: var(--color-bg-primary);
    border: 3px solid var(--color-accent-primary);
    border-radius: 50%;
    transition: all var(--transition-fast);
  }
  
  .timeline-item:hover .marker-dot {
    transform: scale(1.3);
    background: var(--color-accent-primary);
    box-shadow: 0 0 20px var(--color-accent-primary);
  }
  
  .timeline-card {
    padding: 1.75rem;
  }
  
  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }
  
  .type-badge {
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 50px;
  }
  
  .type-professional {
    background: rgba(16, 185, 129, 0.15);
    color: var(--color-accent-tertiary);
    border: 1px solid rgba(16, 185, 129, 0.3);
  }
  
  .type-academic {
    background: rgba(124, 58, 237, 0.15);
    color: var(--color-accent-secondary);
    border: 1px solid rgba(124, 58, 237, 0.3);
  }
  
  .type-freelance {
    background: rgba(0, 212, 255, 0.15);
    color: var(--color-accent-primary);
    border: 1px solid rgba(0, 212, 255, 0.3);
  }
  
  .period {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }
  
  .role {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }
  
  .company-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }
  
  .company {
    font-weight: 500;
    color: var(--color-accent-primary);
  }
  
  .location {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .responsibilities {
    list-style: none;
    margin-bottom: 1.25rem;
  }
  
  .responsibilities li {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }
  
  .responsibilities svg {
    flex-shrink: 0;
    color: var(--color-accent-tertiary);
    margin-top: 2px;
  }
  
  .card-footer {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }
  
  .skills-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .skill-tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-text-secondary);
  }
  
  .links {
    display: flex;
    gap: 1rem;
  }
  
  .link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent-primary);
    transition: all var(--transition-fast);
  }
  
  .link:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .timeline-line {
      left: 20px;
    }
    
    .timeline-item,
    .timeline-item:nth-child(odd),
    .timeline-item:nth-child(even) {
      width: 100%;
      margin-left: 0;
      margin-right: 0;
      padding-left: 50px;
      padding-right: 0;
      text-align: left;
    }
    
    .timeline-item:nth-child(even) .card-header {
      flex-direction: row;
    }
    
    .timeline-marker,
    .timeline-item:nth-child(odd) .timeline-marker,
    .timeline-item:nth-child(even) .timeline-marker {
      left: 10px;
      right: auto;
    }
  }
</style>