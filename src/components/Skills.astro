  {
    category: 'Lenguajes',
    icon: 'code',
    items: [
      { name: 'Python', level: 90 },
      { name: 'Java', level: 85 },
      { name: 'PHP', level: 80 },
      { name: 'MATLAB', level: 75 },
      { name: 'JavaScript', level: 70 },
    ]
  },
  {
    category: 'Herramientas',
    icon: 'tool',
    items: [
      { name: 'Git & GitHub', level: 85 },
      { name: 'Docker', level: 75 },
      { name: 'Jupyter Notebook', level: 85 },
      { name: 'Linux/Unix', level: 80 },
      { name: 'VS Code', level: 90 },
    ]
  },
  {
    category: 'Áreas',
    icon: 'brain',
    items: [
      { name: 'Inteligencia Artificial', level: 80 },
      { name: 'Señales y Sistemas', level: 85 },
      { name: 'Comunicaciones Digitales', level: 75 },
      { name: 'Redes', level: 80 },
      { name: 'Algoritmos', level: 85 },
    ]
  }
