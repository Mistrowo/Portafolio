---

<section id="habilidades" class="skills section">
  <div class="container">
    <div class="section-header">
      <span class="section-label">Habilidades</span>
      <h2 class="section-title">
        Mi <span class="gradient-text">Stack Tecnológico</span>
      </h2>
      <p class="section-description">
        Tecnologías y herramientas que utilizo para dar vida a proyectos innovadores
      </p>
    </div>
    
    <div class="skills-grid">
      {skills.map((group, groupIndex) => (
        <div class="skill-card card" style={`--delay: ${groupIndex * 0.1}s`}>
          <div class="skill-card-header">
            <div class="skill-icon" set:html={icons[group.icon]} />
            <h3 class="skill-category">{group.category}</h3>
          </div>
          
          <div class="skill-items">
            {group.items.map((skill, skillIndex) => (
              <div class="skill-item" style={`--skill-delay: ${skillIndex * 0.1}s`}>
                <div class="skill-info">
                  <span class="skill-name">{skill.name}</span>
                  <span class="skill-level">{skill.level}%</span>
                </div>
                <div class="skill-bar">
                  <div 
                    class="skill-progress" 
                    style={`--progress: ${skill.level}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="skills-extras">
      <h3 class="extras-title">También trabajo con</h3>
      <div class="extras-tags">
        <span class="tag">SQL</span>
        <span class="tag">REST APIs</span>
        <span class="tag">Machine Learning</span>
        <span class="tag">Data Analysis</span>
        <span class="tag">LaTeX</span>
        <span class="tag">Markdown</span>
        <span class="tag">IRC Protocol</span>
        <span class="tag">NumPy</span>
        <span class="tag">Pandas</span>
        <span class="tag">Matplotlib</span>
      </div>
    </div>
  </div>
</section>

<style>
  .skills {
    position: relative;
  }
  
  .skills::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(124, 58, 237, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 4rem;
  }
  
  .skill-card {
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay, 0s);
    opacity: 0;
  }
  
  .skill-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .skill-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 212, 255, 0.1);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 12px;
    color: var(--color-accent-primary);
  }
  
  .skill-category {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }
  
  .skill-items {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  
  .skill-item {
    opacity: 0;
    animation: fadeInUp 0.4s ease forwards;
    animation-delay: calc(var(--delay, 0s) + var(--skill-delay, 0s) + 0.3s);
  }
  
  .skill-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .skill-name {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-secondary);
  }
  
  .skill-level {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-accent-primary);
  }
  
  .skill-bar {
    height: 6px;
    background: var(--color-bg-tertiary);
    border-radius: 3px;
    overflow: hidden;
  }
  
  .skill-progress {
    height: 100%;
    width: var(--progress);
    background: var(--color-accent-gradient);
    border-radius: 3px;
    transform: scaleX(0);
    transform-origin: left;
    animation: progressFill 1s ease forwards;
    animation-delay: calc(var(--delay, 0s) + var(--skill-delay, 0s) + 0.5s);
  }
  
  @keyframes progressFill {
    to {
      transform: scaleX(1);
    }
  }
  
  .skills-extras {
    text-align: center;
  }
  
  .extras-title {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }
  
  .extras-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }
  
  .tag {
    padding: 0.5rem 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 50px;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }
  
  .tag:hover {
    border-color: var(--color-accent-primary);
    color: var(--color-accent-primary);
    background: rgba(0, 212, 255, 0.05);
  }
  
  @media (max-width: 1024px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 640px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>